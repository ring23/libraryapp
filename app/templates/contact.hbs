{{outlet}}
<h1>Contact Page</h1>

<div class="row">
    <div class="col-md-6">
      <div class="form-group">
          <label>Your email address*:</label>
          {{input type="email" class="form-control" placeholder="Your email address" value=emailAddress autofocus="autofocus"}}
      </div>
      <div class="form-group">
          <label>Your message*:</label>
          {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="5" value=message}}
      </div>
      <button class="btn btn-success" {{action 'sendMessage'}} disabled="{{unless isValid 'disabled'}}">Send</button>
    </div>
</div>

{{#if responseMessage}}
  <div class="alert alert-success">
    {{responseMessage}}
  </div>
{{/if}}
